    body { background: url('/assets/background1.JPG') no-repeat center center fixed; }
    .main-content.container{ background: #fdfdfd; background: rgba(246,246,246,0.5) ; background: url("/assets/noise-white.jpg") repeat ;}
    .header-logo { background-color: #fff; }
    .sub-header-logo { width: 100%; }
    .footer { background: url("/assets/noise-grey.jpg") repeat; border-top: 1px solid silver; clear: both; padding: 20px 0px; }
    .footer p { width: 75%; margin: 0 auto; font-size: .9em; color: #fff; }
    ul.locations { list-style: none; }
    ul.location-details { list-style: none; }
    ul#hotel-list { list-style: none; margin-right: 60px; }
    ul#hotel-list li.hotel { text-align: left; margin-bottom: 15px; }
    ul#hotel-list li.hotel { border-bottom: 2px solid silver; }
    ul#hotel-list li.hotel h3 { margin-bottom: 0px; }
    
    
    ul#hotel-list .address { list-style: none;  }    
    ul#hotel-list .address li { padding-bottom: 4px;  }
    ul.staff { list-style: none; }
    ul.person-details { list-style: none; }
    .side-text { padding: 15px; font-family: "PT Serif",Georgia,Times,"Times New Roman",serif; font-size: 1.25em; color: #353E34;}
    .content-container { padding: 15px; }
    h2 { font-size: 2.2em; }
  h1, h2, h3, h4, h5, h6 { font-family: "PT Serif","Georgia","Helvetica Neue",Arial,sans-serif; text-rendering: optimizelegibility; margin-bottom: .5em; font-weight: bold;}
  .content-container p { font-family: "PT Serif",Georgia,Times,"Times New Roman",serif; font-size: 1.25em; color: #353E34; }
